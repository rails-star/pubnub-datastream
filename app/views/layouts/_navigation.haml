.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{ type: "button", data: {toggle: "collapse", target: ".navbar-collapse"} }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"} Pubnub demo app
    - if user_signed_in?
      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li
            %a{href: '#'}= @name
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to t('sign_out'), '/logout', method: :delete
    - else
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to t('sign_in'), '/'
